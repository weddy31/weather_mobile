<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

  <ContentPage.Content>
    <StackLayout Padding="20">
      <Label Text="Output:" FontSize="20" HorizontalOptions="Center" Margin="0, 20, 0, 0"/>

      <Label x:Name="label" FontSize="16" HorizontalOptions="Center" Margin="0, 10"/>

      <Label x:Name="label_2" Text="Wybierz miasto:" FontSize="16" Margin="0, 20, 0, 0"/>

      <Picker x:Name="comboBox" Title="Wybierz" FontSize="16" Margin="0, 10, 0, 0"/>

      <Button x:Name="button" Text="Wcisnij, aby zobaczyć pogodę" FontSize="16" Margin="0, 20, 0, 0"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>
